{% macro render(id="", name="", value="", class="", required=False, placeholder="", pattern=None, additional_attribs="") %}

{% if pattern %}
    <input id="{{id}}" type="text" name="{{name}}" value="{{ value }}" required={{required}} placeholder="{{placeholder}}" pattern="{{pattern}}" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 {{class}}"  {{additional_attribs}} >
{% else %}
    <input id="{{id}}" type="text" name="{{name}}" value="{{ value }}" required={{required}} placeholder="{{placeholder}}" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 {{class}}"  {{additional_attribs}} >
{% endif %}

{% endmacro %}