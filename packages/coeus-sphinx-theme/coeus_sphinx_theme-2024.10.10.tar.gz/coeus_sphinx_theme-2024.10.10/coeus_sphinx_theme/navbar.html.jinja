<header class="sticky top-0 z-40 w-full border-b shadow-sm border-border supports-backdrop-blur:bg-background/60 bg-background/95 backdrop-blur">
    {%- block header_before %}
    {% endblock header_before -%}
    <div class="container flex items-center h-14">
        {%- block header_left %}
            <div class="hidden mr-4 md:flex">
                {%- block header_logo %}
                    <a href="{{ pathto(master_doc) }}" class="flex items-center mr-6">
                        {%- if logo_url %}
                            <img height="24" width="24" class="mr-2 dark:invert" src="{{ logo_url }}" alt="Logo" />
                        {%- endif -%}
                        {%- if html_logo and not logo_url %}
                            <img width="24" height="24" class="mr-2 hidden dark:block" src="{{ pathto('_static/' + html_logo, 1) }}" alt="Logo" />
                        {%- endif -%}
                        {%- if html_logo and not logo_url %}
                            <img width="24" height="24" class="mr-2 dark:hidden" src="{{ pathto('_static/' + html_logo, 1) }}" alt="Logo" />
                        {%- endif -%}
                        <span class="hidden font-bold sm:inline-block text-clip whitespace-nowrap">{{ docstitle }}</span>
                    </a>
                {%- endblock header_logo %}
            </div>
        {%- endblock header_left %}
        {%- block mobile_menu %}
            {%- if sidebars|length >0 -%}
                <button class="inline-flex items-center justify-center h-10 px-0 py-2 mr-2 text-base font-medium transition-colors rounded-md hover:text-accent-foreground hover:bg-transparent md:hidden" type="button" @click="showSidebar = true">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewbox="0 96 960 960" aria-hidden="true" fill="currentColor">
                        <path d="M152.587 825.087q-19.152 0-32.326-13.174t-13.174-32.326q0-19.152 13.174-32.326t32.326-13.174h440q19.152 0 32.326 13.174t13.174 32.326q0 19.152-13.174 32.326t-32.326 13.174h-440Zm0-203.587q-19.152 0-32.326-13.174T107.087 576q0-19.152 13.174-32.326t32.326-13.174h320q19.152 0 32.326 13.174T518.087 576q0 19.152-13.174 32.326T472.587 621.5h-320Zm0-203.587q-19.152 0-32.326-13.174t-13.174-32.326q0-19.152 13.174-32.326t32.326-13.174h440q19.152 0 32.326 13.174t13.174 32.326q0 19.152-13.174 32.326t-32.326 13.174h-440ZM708.913 576l112.174 112.174q12.674 12.674 12.674 31.826t-12.674 31.826Q808.413 764.5 789.261 764.5t-31.826-12.674l-144-144Q600 594.391 600 576t13.435-31.826l144-144q12.674-12.674 31.826-12.674t31.826 12.674q12.674 12.674 12.674 31.826t-12.674 31.826L708.913 576Z" />
                    </svg>
                    <span class="sr-only">Toggle navigation menu</span>
                </button>
            {%- endif -%}
        {%- endblock mobile_menu %}
        {%- block header_right %}
            <div class="flex items-center justify-between flex-1 space-x-2 sm:space-x-4 md:justify-end">
                {%- block header_main_nav %}
                    {%- if navbar_links|tobool -%}
                        <nav class="flex items-center space-x-6 text-sm font-medium">
                            {%- for caption, pages in navbar_links.items() %}
                                <div class="navbar-dropdown">
                                    <button class="dropbtn">{{ caption }}</button>
                                    <div class="navbar-dropdown-content">
                                        {%- for title, url in pages.items() %}
                                            {%- if url.startswith("http") %}
                                                <a href="{{ url }}" rel="nofollow noopener">{{ title }}</a>
                                            {%- else %}
                                                <a href="{{ pathto(url) }}">{{ title }}</a>
                                            {%- endif %}
                                        {%- endfor %}
                                    </div>
                                </div>
                            {%- endfor %}
                        </nav>
                    {%- endif %}
                {%- endblock header_main_nav -%}
                {%- if docsearch or hasdoc('search') %}
                    <div class="flex-1 w-full md:w-auto md:flex-none">
                        {%- include "searchbox.html.jinja" %}
                    </div>
                {%- endif %}
                {%- block graphical_links %}
                    <nav class="flex items-center space-x-1">
                        {%- if theme_graphical_links|tobool %}
                            {%- for text,url in theme_graphical_links.items() %}
                                {%- if url is mapping %}
                                    <a href="{{ url.link }}" title="Visit {{ text }}" rel="noopener nofollow">
                                        <div class="inline-flex items-center justify-center px-0 text-sm font-medium transition-colors rounded-md disabled:opacity-50 disabled:pointer-events-none hover:bg-accent hover:text-accent-foreground h-9 w-9">
                                            {{ url.icon }}
                                        </div>
                                    </a>
                                {% endif %}
                            {%- endfor %}
                        {%- endif %}
                    </nav>
                {%- endblock graphical_links %}
            </div>
        {%- endblock header_right %}
    </div>
    {%- block header_after %}{%- endblock header_after %}
    </header>
